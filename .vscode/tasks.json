{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure and Build Project",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B",
        "build",
        "-S",
        "."
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Generated task for configuring the project with cmake"
    },
    {
      "label": "Build Project",
      "type": "shell",
      "command": "make",
      "args": [
        "-C",
        "build",
        "-j2"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Generated task for building the project in the build folder"
    }
  ]
}
